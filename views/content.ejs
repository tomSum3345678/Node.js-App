<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Supermarket - Product Catalog</title>
    <style>
 /* Reset and base styles */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
  color: #333;
  line-height: 1.6;
}

/* Navbar */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #8e4585;
  color: white;
  padding: 12px 24px;
  flex-wrap: wrap;
}

.navbar-brand {
  font-size: 1.5rem;
  font-weight: 700;
}

.navbar-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-right: 20px;
  color: #333;
  font-weight: 600;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
}

/* Buttons in navbar and elsewhere */
.btn {
  background-color: white;
  color: #007bff;
  border: none;
  border-radius: 5px;
  padding: 6px 12px;
  text-decoration: none;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s ease;
}

.btn:hover {
  background-color: rgba(255, 255, 255, 0.85);
}

.btn-dashboard {
  background-color: #6a3f6a;
  color: white;
}

.btn-dashboard:hover {
  background-color: #583d58;
}

.btn-logout {
  background-color: #c0392b;
  color: white;
}

.btn-logout:hover {
  background-color: #a83224;
}

.btn-login {
  background-color: #2980b9;
  color: white;
}

.btn-login:hover {
  background-color: #1f6391;
}

/* Container for main content */
.container {
  max-width: 1200px;
  margin: 2rem auto;
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 2px 10px rgb(0 0 0 / 0.1);
}

/* Header */
.header {
  text-align: center;
  margin-bottom: 1.5rem;
}

.header h1 {
  font-size: 2rem;
  margin-bottom: 0.25rem;
}

.header p {
  color: #666;
  font-size: 1rem;
}

/* Search form */
.search-form {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.search-form input[type="text"],
.search-form select {
  padding: 0.5rem 0.75rem;
  font-size: 1rem;
  border: 1px solid #ccc;
  border-radius: 5px;
  min-width: 200px;
  transition: border-color 0.3s ease;
}

.search-form input[type="text"]:focus,
.search-form select:focus {
  border-color: #8e4585;
  outline: none;
}

.btn-search {
  background-color: #8e4585;
  color: white;
  border: none;
  cursor: pointer;
  padding: 0.6rem 1.2rem;
  border-radius: 5px;
  font-size: 1rem;
  transition: background-color 0.3s ease;
}

.btn-search:hover {
  background-color: #7b3e7b;
}

/* Product grid */
.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1.5rem;
}

/* Product card */
.product-card {
  background: #fafafa;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 1rem;
  text-align: center;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-shadow: 0 1px 5px rgb(0 0 0 / 0.05);
  transition: box-shadow 0.3s ease;
}

.product-card:hover {
  box-shadow: 0 4px 15px rgb(0 0 0 / 0.15);
}

/* Product image container */
.product-image {
  width: 100%;
  height: 200px;
  margin-bottom: 1rem;
  background-color: #eaeaea;
  border: 1px dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  object-fit: contain;
  border-radius: 6px;
  overflow: hidden;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* Product info */
.product-info {
  flex-grow: 1;
}

.product-name {
  font-size: 1.125rem;
  font-weight: 700;
  margin-bottom: 0.25rem;
  color: #222;
}

.product-category {
  font-size: 0.875rem;
  color: #666;
  display: block;
  margin-bottom: 0.5rem;
}

.product-price {
  font-size: 1rem;
  font-weight: 600;
  color: #333;
  margin-bottom: 0.5rem;
}

.product-stock {
  font-size: 0.9rem;
  margin-bottom: 1rem;
  color: #444;
}

.product-stock .in-stock {
  color: #2ecc71;
  font-weight: 600;
}

.product-stock .out-stock {
  color: #e74c3c;
  font-weight: 600;
}

/* Details button */
.btn-details {
  background-color: #8e4585;
  color: white;
  border: none;
  padding: 0.6rem 1rem;
  border-radius: 5px;
  cursor: pointer;
  text-decoration: none;
  font-size: 1rem;
  transition: background-color 0.3s ease;
  display: inline-block;
}

.btn-details:hover {
  background-color: #7b3e7b;
}

/* No products found */
.no-products {
  text-align: center;
  padding: 3rem 1rem;
  color: #999;
}

.no-products h2 {
  font-size: 1.75rem;
  margin-bottom: 0.75rem;
}

/* Custom link with tooltip */
.custom-link {
  color: inherit;
  text-decoration: none;
  position: relative;
  font-size: 1.2rem;
}

.custom-link::after {
  content: "Shopping Cart";
  display: none;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 120%;
  background: rgba(0, 0, 0, 0.75);
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  white-space: nowrap;
  font-size: 0.85rem;
  z-index: 10;
  pointer-events: none;
}

.custom-link:hover::after {
  display: block;
}

/* Shopping cart and invoice buttons below navbar */
.btn-cart, .btn-invoice {
  background-color: #8e4585;
  color: white;
  border: none;
  border-radius: 5px;
  padding: 10px 18px;
  margin: 0 10px;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s ease;
  text-decoration: none;
  display: inline-block;
}

.btn-cart:hover, .btn-invoice:hover {
  background-color: #7b3e7b;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .navbar {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }

  .navbar-actions {
    justify-content: flex-start;
    gap: 0.5rem;
    width: 100%;
  }

  .search-form {
    flex-direction: column;
    gap: 0.75rem;
  }

  .search-form input[type="text"],
  .search-form select {
    min-width: 100%;
  }

  .product-grid {
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  }
}

